""""""""""""


set number relativenumber

set smarttab
set cindent
set tabstop=2
set shiftwidth=2
" always uses spaces instead of tab characters
set expandtab

"""""""""""""""""""
" Vim-one + KiTTY "
" https://github.com/kovidgoyal/kitty/issues/108
colorscheme one

let &t_ut=''
set background=dark

if (empty($TMUX))
  if (has("nvim"))
  let $NVIM_TUI_ENABLE_TRUE_COLOR=1
  endif
  if (has("termguicolors"))
    set termguicolors
  endif
endif
